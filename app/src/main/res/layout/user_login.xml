<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:hl_angle="90"
    app:hl_cornerRadius="50dp"
    app:hl_endColor="#f4f4f4"
    app:hl_shadowColor="#2a000000"

    android:layout_height="580dp"
    android:layout_width="match_parent">
    <com.kproduce.roundcorners.RoundLinearLayout
        app:rRadius="50dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/log_text"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="欢迎回来" />

        <EditText
            android:id="@+id/log_name"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="用户名"
            android:layout_height="60dp"/>
        <EditText
            android:id="@+id/log_password"
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="密码"
            android:layout_height="60dp"/>
        <com.lihang.ShadowLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hl_angle="90"
            app:hl_cornerRadius="50dp"
            app:hl_endColor="#FF7F56"
            app:hl_layoutBackground="#f4f4f4"
            app:hl_layoutBackground_true="#4a90e2"
            app:hl_shadowColor="#2a000000"
            app:hl_shadowLimit="6dp"
            app:hl_shadowOffsetY="6dp"
            app:hl_shapeMode="ripple"
            app:hl_startColor="#FF7F56">

        <Button
            android:id="@+id/log_apply"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册"/>
        </com.lihang.ShadowLayout>



    </com.kproduce.roundcorners.RoundLinearLayout>




</com.lihang.ShadowLayout>